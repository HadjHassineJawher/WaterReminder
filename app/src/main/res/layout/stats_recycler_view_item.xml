<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llay_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/el_margin"
    android:background="@drawable/rectangle_shape">
    <ImageView
        android:id="@+id/imgv_stats"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/sick_icon"
        android:layout_margin="@dimen/el_margin"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/el_margin">
        <TextView
            android:id="@+id/txtv_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="day"/>
        <TextView
            android:id="@+id/txtv_percentage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Water drinked per day"/>
        <ImageView
            android:id="@+id/imgv_icon"
            android:layout_width="@dimen/icon_size_mini"
            android:layout_height="@dimen/icon_size_mini"
            android:src="@drawable/failed"/>

    </LinearLayout>

</LinearLayout>